<div class="row">
  <div class="col-xs-12">
    <div class="box box-solid">
      <div class="box-body">
        <div class="row">
          <div class="col-xs-6">
            <dl class="dl-horizontal">
              <dt>Status</dt>
              <dd>
              <span class="label label-<%= conn_status_color_class(@request.conn) %>"><%= @request.conn.status %></span>
              </dd>
              <dt>Method</dt>
              <dd><%= @request.conn.method %></dd>
              <dt>Path</dt>
              <dd><%= @request.conn.request_path %></dd>
            </dl>
          </div>
          <div class="col-xs-6">
            <dl class="dl-horizontal">
              <dt>Controller</dt>
              <dd><%= controller_action(@request.conn) %></dd>
              <dt>Duration</dt>
              <dd><%= native_time_to_string(@request.timeline.duration) %></dd>
              <dt>Timestamp</dt>
              <dd><%= datetime_to_string(@request.created_at) %></dd>
            </dl>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="progress">
              <div class="progress-bar bg-blue" style="width: 35%" data-toggle="tooltip" title="35% (100ms)">
                <span>Controller</span>
              </div>
              <div class="progress-bar bg-yellow" style="width: 40%" data-toggle="tooltip" title="35% (100ms)">
                <span>Ecto</span>
              </div>
              <div class="progress-bar bg-purple" style="width: 15%" data-toggle="tooltip" title="35% (100ms)">
                <span>Templates</span>
              </div>
              <div class="progress-bar bg-gray-active" style="width: 10%" data-toggle="tooltip" title="35% (100ms)">
                <span>Other</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
